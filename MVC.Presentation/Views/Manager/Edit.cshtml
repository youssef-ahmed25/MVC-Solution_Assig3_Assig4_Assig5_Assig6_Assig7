@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Edit Users</h1>
    <h2 class="mb-4">Edits @Model.RoleName Role</h2>
    <form method="post" asp-controller="Manager" asp-action="Edit" asp-route-id="@Model.Id" class="col-8">

        <div asp-validation-summary="All" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Id">Id</label>
            <input asp-for="Id" readonly class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="RoleName">RoleName</label>
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        <div class="mt-4 m-auto">
            <input class="btn btn-success" type="submit" value="Save" />
            <a asp-controller="Manager" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div>
    </form>
</div>

