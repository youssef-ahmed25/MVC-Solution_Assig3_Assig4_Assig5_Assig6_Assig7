@model UserViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4">User @Model.FirstName @Model.LastName Details</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <div class="form-group mb-3">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" readonly class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="FirstName" class="control-label">Fname</label>
                <input asp-for="FirstName" readonly class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="LastName" class="control-label">Lname</label>
                <input asp-for="LastName" readonly class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" readonly class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" readonly class="form-control" />
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a> |
        <a asp-action="Index" class="btn btn-secondary">Back To List</a>
    </div>
</div>

